    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/js/all.min.js" integrity="sha512-GWzVrcGlo0TxTRvz9ttioyYJ+Wwk9Ck0G81D+eO63BaqHaJ3YZX9wuqjwgfcV/MrB2PhaVX9DkYVhbFpStnqpQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
</head>
<body>
    <div class="page-wrapper">
        <header class="header">
            <div class="header-bottom sticky-header">
                <div class="container">
                    <div class="header-left">
                        <button class="mobile-menu-toggler">
                            <span class="sr-only">Toggle mobile menu</span>
                            <i class="icon-bars"></i>
                        </button>

                        <a href="/Home/Index" class="logo">
                            <img src="~/assets/images/demos/demo-8/logo.png" alt="logo" width="82" height="20">
                        </a>
                    </div>
                    <div class="header-center">
                        <nav class="main-nav">
                            <ul class="menu sf-arrows">
                                <li>
                                    <a href="/Home/Index">Anasayfa</a>
                                </li>
                                <li>
                                    <a href="#" class="sf-with-ul">Kategoriler</a>
                                    <ul>
                                        <li><a href="/Home/Category/Evcil-Hayvanlar">Evcil Hayvan Malzemeleri</a></li>
                                        <li><a href="/Home/Category/Buyukbas-Hayvanlar">Büyükbaş Hayvvan Malzemeleri</a></li>
                                        <li><a href="/Home/Category/Kucukbas-Hayvanlar">Küçükbaş Hayvan Malzemeleri</a></li>
                                    </ul>
                                </li>
                                <li>
                                    <a href="/Home/Hakkimizda">Hakkımızda</a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                    <div class="header-right">
                        <div class="dropdown cart-dropdown">
                            <a href="/Basket/ViewBasket" class="dropdown-toggle" >
                                <i class="icon-shopping-cart"></i>
                                <span class="cart-count"></span>
                            </a>
                        </div>
                        <div class="dropdown cart-dropdown">
                            <a class="dropdown-toggle" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" data-display="static">
                                <i style="color: #666; font-size: large; padding-left: 5px; " class="fa-regular fa-user"></i>
                            </a>
                            <div class="dropdown-menu dropdown-menu-right" style="width: 170px !important;">
                                <ul class="menu" style="display:block !important;">
                                    @if (User.Identity.IsAuthenticated)
                                    {
                                        <li>
                                            <a href="/Home/MyAccount" title="Hesabım">
                                                <i class="fa-solid fa-paw"></i> Hesabım
                                            </a>
                                        </li>
                                        <li>
                                            <a href="/Account/Logout" title="Çıkış">
                                                <i class="fas fa-sign-out-alt"></i> Çıkış
                                            </a>
                                        </li>
                                    }
                                    else
                                    {
                                        <li>
                                            <a href="/Account/Login" title="Giriş">
                                                <i class="fas fa-sign-in"></i> Giriş
                                            </a>
                                        </li>
                                    }
                                </ul>
                            </div>
                        </div>
                        @*<div>
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <a href="/Account/Logout" title="Log Out">
                                        <i class="fas fa-sign-out-alt"></i>
                                    </a>
                                }
                                else
                                {
