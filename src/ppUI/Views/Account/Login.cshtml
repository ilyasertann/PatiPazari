<link href="~/assets/page/Login/login.css" rel="stylesheet" />
<script src="~/assets/page/Login/login.js"></script>

<div class="login-container">
    <div class="login-header">
        <h2>Giriş</h2>
    </div>
    <div class="login-body">
        <img src="https://placekitten.com/200/200" alt="Animal Image">
        <form id="loginForm" action="/Account/Login" method="post">
            <div class="form-group">
                <label for="email">Kullanıcı Adı:</label>
                <input type="text" class="form-control" id="email" name="email" required>
            </div>
            <div class="form-group">
                <label for="password">Şifre:</label>
                <input type="password" class="form-control" id="password" name="password" required>
            </div>
            <button type="submit" class="btn btn-primary btn-login">Giriş</button>
            <a href="/Account/Register">Hesabınız yok mu?</a>
        </form>
        <div id="errorMessage" class="text-danger mt-3">
            @if (ViewBag.ErrorMessage != null)
            {
                <p>@ViewBag.ErrorMessage</p>
            }
        </div>
        <div id="errorMessage" class="text-danger mt-3">
            @if (TempData["SuccessMessage"] != null)
            {
                <p>@TempData["SuccessMessage"]</p>
            }
        </div>
    </div>
</div>
